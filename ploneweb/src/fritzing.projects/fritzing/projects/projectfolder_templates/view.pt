<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fritzing.projects">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        
        <div tal:replace="structure context/text/output | nothing" />
        
        <tal:projects condition="view/haveProjects">
            <h2 i18n:translate="title_projects">Projects</h2>
            <dl>
                <tal:block repeat="project view/projects">
                    <dt>
                        <a tal:attributes="href project/url"
                           tal:content="project/title" />
                    </dt>
                    <dd tal:content="project/description" />
                </tal:block>
            </dl>
        </tal:projects>
        
    </metal:content-core>
</metal:content-core>

</body>
</html>
