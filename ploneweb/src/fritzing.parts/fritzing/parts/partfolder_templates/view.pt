<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fritzing.parts">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        
        <div tal:replace="structure context/text/output | nothing" />
        
        <tal:parts condition="view/haveParts">
            <h2 i18n:translate="title_parts">Parts</h2>
            <dl>
                <tal:block repeat="part view/parts">
                    <dt>
                        <a tal:attributes="href part/url"
                           tal:content="part/title" />
                    </dt>
                    <dd tal:content="part/description" />
                    <!--
                    TODO: needs to be added to catalog first, or use acq
                    <dd><svg tal:replace="structure part/iconView | nothing"/></dd>
                    -->
                </tal:block>
            </dl>
        </tal:parts>
        
    </metal:content-core>
</metal:content-core>

</body>
</html>
