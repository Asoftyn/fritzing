<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fritzing.parts">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading" tal:content="context/title" />
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />
        
        <h3>Views</h3>
        <div class="partViews">
            <div>
                <h5>Icon</h5>
                <p tal:replace="structure context/iconView | nothing"/>
            </div>
            <div>
                <h5>Breadboard</h5>
                <p tal:replace="structure context/breadboardView | nothing"/>
            </div>
            <div>
                <h5>Schematic</h5>
                <p tal:replace="structure context/schematicView | nothing"/>
            </div>
            <div>
                <h5>PCB</h5>
                <p tal:replace="structure context/pcbView | nothing"/>
            </div>
        </div>
        
        <p tal:replace="structure context/body/output | nothing" />
        
        <h3>Metadata</h3>
        <dl>
            <dt>Fritzing Version</dt>
            <dd tal:content="context/fritzingVersion"/>
            <dt>Module ID</dt>
            <dd tal:content="context/moduleId"/>
            <dt>Part Version</dt>
            <dd tal:content="context/partVersion"/>
            <dt>Author</dt>
            <dd tal:content="context/author"/>
            <dt>Creation Date</dt>
            <dd tal:content="context/creationDate"/>
            <dt>Label</dt>
            <dd tal:content="context/label"/>
            <dt>Tags</dt>
            <dd>
               <span tal:repeat="tag context/tags" tal:omit-tag="">
                 <span tal:replace="tag"/>, 
               </span>
            </dd>
        </dl>
        <h3>Properties</h3>
        <dl>
           <div tal:repeat="prop context/properties" tal:omit-tag="">
             <dt tal:content="prop"/>
             <dd tal:content="python:context.properties[prop]"/>
           </div>
        </dl> 
        <h3>Connectors</h3>
        <dl>
           <div tal:repeat="conn context/connectors" tal:omit-tag="">
             <dt tal:content="conn"/>
             <dd tal:content="python:context.connectors[conn]"/>
           </div>
        </dl> 

        
        <!--<p><a tal:attributes="href string:${context/absolute_url}/@@download/fritzingFile/${context/fritzingFile/filename}">Download</a></p>-->
        <div tal:content="structure view/w/fritzingFile/render" />        

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
